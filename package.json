{
  "name": "edutech-chatbot",
  "version": "2.0.0",
  "description": "AI-powered Korean language learning platform - Mac Mini local server edition",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "cd apps/api && npm run dev",
    "dev:web": "cd apps/web && npm run dev",
    
    "build": "npm run build:packages && npm run build:api && npm run build:web",
    "build:packages": "tsc -p packages/tsconfig.json",
    "build:api": "cd apps/api && npm run build",
    "build:web": "cd apps/web && npm run build",
    
    "start": "concurrently \"npm run start:api\" \"npm run start:web\"",
    "start:api": "cd apps/api && npm start",
    "start:web": "cd apps/web && npm start",
    
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "db:seed": "tsx scripts/seed-database.ts",
    "db:backup": "./scripts/backup-restore.sh backup --full",
    "db:restore": "./scripts/backup-restore.sh restore",
    
    "migrate:mongo-to-sqlite": "tsx scripts/migrate-mongo-to-sqlite.ts",
    "migrate:sqlite-to-postgres": "tsx scripts/migrate-sqlite-to-postgres.ts",
    
    "deploy:local": "./scripts/deploy-mac-mini.sh --env production",
    "deploy:dev": "./scripts/deploy-mac-mini.sh --env development",
    
    "tunnel:setup": "./scripts/setup-cloudflare-tunnel.sh",
    "tunnel:status": "cloudflared tunnel info edutech-chatbot",
    
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop all",
    "pm2:restart": "pm2 restart all",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    
    "test": "npm run test:system",
    "test:system": "./scripts/system-test.sh",
    "test:comprehensive": "./scripts/system-test.sh --comprehensive",
    "test:api": "cd apps/api && npm test",
    "test:web": "cd apps/web && npm test",
    
    "lint": "concurrently \"npm run lint:api\" \"npm run lint:web\"",
    "lint:api": "cd apps/api && npm run lint",
    "lint:web": "cd apps/web && npm run lint",
    "lint:fix": "concurrently \"npm run lint:api -- --fix\" \"npm run lint:web -- --fix\"",
    
    "type-check": "concurrently \"npm run type-check:packages\" \"npm run type-check:api\" \"npm run type-check:web\"",
    "type-check:packages": "tsc --noEmit -p packages/tsconfig.json",
    "type-check:api": "cd apps/api && npm run type-check",
    "type-check:web": "cd apps/web && npm run type-check",
    
    "clean": "rimraf dist build .next node_modules/.cache",
    "clean:all": "npm run clean && rimraf node_modules apps/*/node_modules packages/*/node_modules",
    
    "postinstall": "npm run db:generate",
    "prepare": "husky install"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "prisma": "^5.22.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "concurrently": "^9.1.0",
    "eslint": "^9.17.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "mongodb": "^6.12.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "uuid": "^11.0.3"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/edutech-chatbot.git"
  },
  "keywords": [
    "ai",
    "chatbot",
    "education",
    "korean",
    "language-learning",
    "sqlite",
    "mac-mini",
    "local-server",
    "prisma",
    "nextjs",
    "expressjs"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/your-username/edutech-chatbot/issues"
  },
  "homepage": "https://github.com/your-username/edutech-chatbot#readme"
}