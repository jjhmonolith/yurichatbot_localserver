# EduTech ChatBot Environment Configuration
# Copy this file to .env and fill in your actual values

# Environment
NODE_ENV=production
APP_ENV=local

# Database
DATABASE_URL=file:./data/edutech.db

# Server Configuration  
PORT=3001
HOST=0.0.0.0
FRONTEND_URL=http://localhost:3300

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_CHAT_MODEL=gpt-4o-mini
OPENAI_CONTENT_MODEL=gpt-4o
OPENAI_CHAT_MAX_TOKENS=1000
OPENAI_CONTENT_MAX_TOKENS=2000

# MongoDB (for migration only)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_DATABASE=your-database-name

# Cloudflare (optional)
CLOUDFLARE_ZONE=your-zone-id
CLOUDFLARE_TUNNEL_ID=your-tunnel-id
CLOUDFLARE_DOMAIN=your-domain.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_PATH=./data/backups

# Cloud Storage (optional)
S3_BUCKET=your-backup-bucket
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# R2 Storage (Cloudflare, optional)
R2_BUCKET=your-r2-bucket  
R2_ENDPOINT=https://your-account.r2.cloudflarestorage.com

# Debug and Development
DEBUG_MODE=false
LOG_LEVEL=info

# Security
CORS_ORIGINS=http://localhost:3000,https://your-domain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Features
ENABLE_ANALYTICS=false
ENABLE_BACKUP=true
ENABLE_RATE_LIMIT=false