    "compression": "^1.7.5",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.0",
    "dotenv": "^17.0.3",
    "openai": "^5.9.0",
    "axios": "^1.10.0",
    "uuid": "^11.0.3",
    "qrcode": "^1.5.4",
